<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ling.vhr.mapper.HrMapper">


    <select id="select" resultType="com.ling.vhr.model.Hr">
        select * from hr where id = #{1}
    </select>

    <select id="selectByUsername" resultType="com.ling.vhr.model.Hr">
        select *
        from hr
        where username = #{username}
    </select>
</mapper>