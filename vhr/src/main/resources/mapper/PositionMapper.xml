<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ling.vhr.mapper.PositionMapper">

    <sql id="basicSql">
        id,
        name,
        create_date,
        enabled
    </sql>

    <insert id="addPosition">
        insert into position(name,create_date,enabled)
        values(#{name},
               #{createDate},
               #{enabled}
               )
    </insert>

    <select id="list" resultType="com.ling.vhr.model.Position">
        select <include refid="basicSql"></include>
        from position
    </select>
</mapper>