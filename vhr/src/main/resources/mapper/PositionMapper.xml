<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ling.vhr.mapper.PositionMapper">

    <sql id="basicSql">
        id,
        name,
        create_date,
        enabled
    </sql>

    <!-- position表与函数同名，需要加数据库前缀或是加``符号 -->
    <insert id="insert">
        insert into `position`(name,create_date,enabled)
        values(#{name},
               #{createDate},
               #{enabled}
               )
    </insert>

    <update id="updateByPrimaryKeySelective">
        update `position`
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null and name != ''">
                name = #{name}
            </if>
            <if test="createDate != null">
                create_date = #{createDate}
            </if>
            <if test="enabled != null">
                enabled = #{enabled}
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteByPrimaryKey">
        delete from position where id = #{id}
    </delete>

    <select id="list" resultType="com.ling.vhr.modules.system.model.Position">
        select <include refid="basicSql"></include>
        from position
    </select>
</mapper>